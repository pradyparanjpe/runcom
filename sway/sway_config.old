# -*- mode: conf -*-
# Variables
set $term alacritty
set $menu rofi -show drun

# inputs
input "2:8:AlpsPS/2_ALPS_GlidePoint" {
    dwt enabled
    tap enabled
    natural_scroll enabled
    middle_emulation enabled
}


# Autoruns
exec mako --anchor bottom-left

exec swayidle -w \
    timeout 300  'swaylock -f -c 000000' \
    timeout 600  'swaymsg "output * dpms off"' \
    resume       'swaymsg "output * dpms on"' \
    before-sleep 'swaylock -i $333333' \
    lock         'swaylock -f -c 000000'

# exec --no-startup-id "setxkbmap -layout us,in -option grp:alt_shift_toggle -variant altgr-intl,mar-kagapa"


# Mappings

# Key Bindings

# Open Applications
bindsym $mod+Shift+f exec firefox
bindsym $mod+Shift+g exec emacsclient -c -a=""
bindsym $mod+Shift+v exec vlc

# BIOS Function keys
bindsym XF86MonBrightnessUp exec light -A 5
bindsym XF86MonBrightnessDown exec light -U 5

#
# Screen lock
bindsym $mod+Ctrl+l exec swaylock -f -c 000000


## Screenshots

bindsym --release $mod+Print exec /usr/local/bin/grim -o $(swaymsg -t get_outputs | jq -r '.[] | select(.focused) | .name') $(xdg-user-dir PICTURES)/$(date +'%Y-%m-%d-%H%M%S_grim.png')

bindsym --release $mod+Shift+Print exec /usr/local/bin/grim -g "$(/usr/local/bin/slurp)" $(xdg-user-dir PICTURES)/$(date +'%Y-%m-%d-%H%M%S_grim.png')


# Output Configuration:

output * bg ${HOME}/Pictures/Tux.svg center

default_border pixel 1

bar {
    position top

    # When the status_command prints a new line to stdout, swaybar updates.
    status_command while ${HOME}/.runcom/sway/status_bar; do sleep 1; done

    colors {
        statusline #ffffff
        background #323232
        inactive_workspace #32323200 #32323200 #5c5c5c
    }
}

