# shellcheck disable=SC1091
. "${RUNCOMDIR:-${HOME}/.runcom}/bin/common.sh" || exit 1

set_vars() {
    unset DBUS_SESSION_BUS_ADDRESS
    unset SESSION_MANAGER
    client=""
    clargs=""
    exec_cmd=""
}

cli_args () {
    while [ -n "$1" ]; do
        if [ -z "${client}" ]; then
            client="${1}"
        else
            clargs="${clargs} ${1}"
        fi
        shift
    done
}

parse_client () {
    if [ -z "${client}" ]; then
        startx "${clargs}"
        exit_code=$?
        clean_exit $exit_code
    elif builtin command -v "${client}" >/dev/null 2>&1 \
            || [ -x "${client}" ]; then
        exec_cmd="${client}"
    elif [ ! "${client%.desktop}" = "${client}" ]; then
        parse_desktop_entry "${client}" "x"
    fi
    if [ -z "${exec_cmd}" ]; then
        clean_exit 1 "Couldn't find session executable for ${client}."
    fi
    trap
    xconfig="$(mktemp)"
    echo "${exec_cmd}"> "$xconfig"
}
unset_vars () {
    unset client
    unset clargs
    unset exec_cmd

    if builtin command -v deallocvt > /dev/null 2>&1; then
        deallocvt
    fi
}

main () {
    set_vars
    cli_args "$@"
    parse_client
    # shellcheck disable=SC2086
    startx "${xconfig}" $clargs
    exit_code=$?
    rm -rf "${xconfig}"
    clean_exit $exit_code
}
main "$@"
